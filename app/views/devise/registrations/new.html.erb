




<div style="background-color:black" id="menu_font">
  <div class="row">
    
    <div class="col-md-4 col-sm-3">
    </div>
    
    <div class="col-md-4 col-sm-6" style="padding-top:150px; padding-bottom:150px">
      <div class="panel panel-default">
        <div class="panel-body">
          <p align="center" style="font-size:30px; margin-bottom:30px; margin-top:10px" id = "menu_font">JOIN IN !</p>
          <div class="jumbotron">
            <div id = "menu_font" style="padding-right:20px; padding-left:20px">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      
              <%= devise_error_messages! %>
              
              <div class="input-group" style = "font-size:20px">
                <span class="input-group-addon" id="basic-addon1">이메일</span>
                <%= f.email_field :email, autofocus: true, :class => "form-control", required: true, :placeholder => "필수"%>
              </div>
              
              <br>
              
              <div class="input-group" style = "font-size:20px">
                <span class="input-group-addon" id="basic-addon1">이름</span>
                <%= f.text_field :name, autofocus: true, :class => "form-control", required: true, :placeholder => "필수"%>
              </div>
                
              <br>
              
              <div class="input-group" style = "font-size:20px">
                <span class="input-group-addon" id="basic-addon1">비밀번호</span>
                <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => "form-control", required: true, :placeholder => "최소 8자리 이상"%>
              </div>
              
              <br>
              
              <div class="input-group" style = "font-size:20px">
                <span class="input-group-addon" id="basic-addon1">비밀번호확인</span>
                <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => "form-control", required: true, :placeholder => "최소 8자리 이상"%>
              </div>
              
              
              <br>
              
              <div class="actions" id = "menu_font" style = "font-size:25px">
                <input type="submit" name="commit" class="btn btn-info btn-lg btn-block" value="회원가입">
               <%#= f.submit "로그인" %> 
              </div>
              
              <% end %>
            
            <%= render "devise/shared/links" %>
            </div>
          
          </div>
        </div>
      </div>
      
    </div><!--div class="col-md-4"-->
    
    <div class="col-md-4 col-sm-3">
    </div>
  </div><!--div class="row"-->
  
  
</div>

