




<div style="background-color:black" id="menu_font">
  <div class="row">
    
    <div class="col-md-4 col-sm-3">
    </div>
    
    <div class="col-md-4 col-sm-6" style="padding-top:150px; padding-bottom:150px">
      <div class="panel panel-default">
        <div class="panel-body">
          <p align="center" style="font-size:30px; margin-bottom:30px; margin-top:10px" id = "menu_font">Forgot Password</p>
          <div class="jumbotron">
            <div id = "menu_font" style="padding-right:20px; padding-left:20px">

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              
              <%= devise_error_messages! %>
              
              <div class="input-group" style = "font-size:20px">
                <span class="input-group-addon" id="basic-addon1">이메일 </span>
                <%= f.email_field :email, autofocus: true, :class => "form-control", required: true, :placeholder =>"회원가입시 입력했던 이메일 입력해 주세요"%>
              </div>
              
              
              <br>
              
              <div class="actions" id = "menu_font" style = "font-size:25px">
                <input type="submit" class="btn btn-info btn-lg btn-block" value="비밀번호 리셋을 위한 이메일 발송">
               <%#= f.submit "로그인" %> 
              </div>
              
              <% end %>
            
            <%= render "devise/shared/links" %>
            </div>
          
          </div>
        </div>
      </div>
      
    </div><!--div class="col-md-4"-->
    
    <div class="col-md-4 col-sm-3">
    </div>
  </div><!--div class="row"-->
  
  
</div>
