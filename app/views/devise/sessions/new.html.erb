


<div style="background-color:black" id="menu_font">
  <center>
  <div class="col-md-4 col-sm-6" >
      <div class="panel panel-default" style="margin-right:100px">
        <div class="panel-body">
          <p align="center" style="font-size:30px; margin-bottom:30px; margin-top:10px" id = "menu_font">COME IN, LOG IN !</p>
          <div class="jumbotron">
            <div id = "menu_font" style="padding-right:20px; padding-left:20px">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              
              <%= f.email_field :email, autofocus: true, :placeholder => "이메일 주소", :class => "form-control"%>
              <br>
              <%= f.password_field :password, autocomplete: "off", :placeholder => "비밀번호", :class => "form-control" %>
              
              <div align="right"> 
                <% if devise_mapping.rememberable? -%>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "로그인 상태 유지" %>
                <% end -%>
              </div>
              
            
              <br>
              
              <div class="actions" id = "menu_font" style = "font-size:25px">
                <input type="submit" name="commit" class="btn btn-info btn-lg btn-block" value="로그인">
               <%#= f.submit "로그인" %> 
              </div>
            
            <% end %>
            <%= render "devise/shared/links" %>
            </div>
          
          </div>
        </div>
      </div>
      
  </div><!--div class="col-md-4"-->
  </center>
</div>