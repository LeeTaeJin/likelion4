            <%= form_tag("/project/modify_process", method: "post") do %>
              <div class="col-md-2 col-sm-1"></div>
              
              <div class="col-md-8 col-sm-10">
                
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">제목</span>
                  <input type="text"  class="form-control"  value="<%=@modify_project.title%>" name="title"  required>
                </div>
                
                <br>
                
                <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">팀장</span>
                  <input type="text"  class="form-control"  value="<%=@modify_project.team_leader%>" name="team_leader"  required>
                  <span class="input-group-addon" id="basic-addon1">팀원</span>
                  <input type="text"  class="form-control"  value="<%=@modify_project.team_member%>" name="team_member"  required>
                </div>
                
                <br>
                
                <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">주소</span>
                  <input type="text"  class="form-control"  value="<%=@modify_project.address%>" name="address"  required>
                </div>
                
                <br>
                
                <div class="input-group">
                  <span class="input-group-addon" id="basic-addon1">설명</span>
                  <textarea name="content" class="form-control" placeholder="해당 프로젝트에 대한 설명을 해주세요(기능, 사용한 주요 코드 등) :D" rows="20" cols="70"  required><%=@modify_project.content%></textarea>
                </div>
                
                <br>
                
                <input type='hidden' name='id' value='<%= @modify_project.id %>'>
                <input class="btn btn-info btn-lg btn-block" type ="submit" value = "수정완료"></input>
                <br><br>
              </div>
              
              <div class="col-md-2 col-sm-1"></div>
